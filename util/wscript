from waflib import Utils

def build(ctx):
	srcnode = ctx.srcnode.abspath()
	bldnode = ctx.bldnode.abspath()

	tickadj_source = [
		"tickadj.c",
	]

	ctx(
		target		= "tickadj",
		features	= "c cprogram bld_include src_include",
		source		= tickadj_source,
		includes	= [
					"%s/tickadj/" % bldnode
				],
		use		= "ntp opts isc M RT",
		install_path= "${PREFIX}/sbin/"
	)

