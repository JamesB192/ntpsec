from waflib import Utils

def build(ctx):
	srcnode = ctx.srcnode.abspath()
	bldnode = ctx.bldnode.abspath()

	ctx(
		target		= "tickadj",
		features	= "c cprogram bld_include src_include",
		source		= ["tickadj.c"],
		includes	= [
					"%s/tickadj/" % bldnode
				],
		use		= "ntp opts isc M RT",
		install_path= "${PREFIX}/sbin/"
	)

	ctx(
		target		= "ntptime",
		features	= "c cprogram bld_include src_include libisc_include",
		source		= ["ntptime.c"],
		includes	= [
					"%s/ntptime/" % bldnode
				],
		use		= "ntp opts isc M RT PTHREAD",
		install_path= "${PREFIX}/sbin/"
	)

	for name in ['hist', 'jitter', 'precision', 'sht', 'testrs6000']:
		ctx(
			target		= name,
			features	= "c cprogram bld_include src_include libisc_include",
			source		= [name + ".c"],
			includes	= [
						"%s/%s/" % (bldnode, name)
					],
			use		= "ntp opts isc M RT PTHREAD",
			install_path= False
		)


