{
	"linters": {
		"c": {
			"type": "cppcheck",
			"include": "(\\.c$|\\.h$)"
		},
		"chmod": {
			"type": "chmod"
		},
		"cpp": {
			"type": "cppcheck",
			"include": "(\\.cpp$)"
		},
		"filename": {
			"type": "filename"
		},
		"generated": {
			"type": "generated"
		},
		"json": {
			"type": "json",
			"include": ["(^\\.arcconfig$)", "(^\\.arclint$)", "(\\.json$)"]
		},
		"merge-conflict": {
			"type": "merge-conflict"
		},
		"nolint": {
			"type": "nolint"
		},
    	"python": {
			"type": "flake8",
			"include": ["(\\.py$)", "(wscript$)"]
		},
		"spelling": {
			"type": "spelling"
		},
    	"xml": {
			"type": "xml",
			"include": "(\\.xml$)"
		}
	}
}
